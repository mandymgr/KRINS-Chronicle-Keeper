#!/usr/bin/env node

/**
 * ğŸ’ Global Krin Command
 * 
 * GjÃ¸r at du kan kjÃ¸re `krin` fra hvor som helst i terminalen
 */

const { spawn } = require('child_process');
const path = require('path');

// Path to Krin agent
const krinPath = path.join(__dirname, '..', 'krin-agent.js');

console.log('\nğŸ’ Starting Krin - Your Personal AI Development Partner...\n');

// Launch Krin agent
const krinProcess = spawn('node', [krinPath], {
  stdio: 'inherit',
  cwd: path.dirname(krinPath)
});

krinProcess.on('close', (code) => {
  if (code !== 0) {
    console.error(`\nâŒ Krin exited with code ${code}`);
  } else {
    console.log('\nğŸ’ Goodbye from Krin! See you soon! ğŸ’');
  }
});

krinProcess.on('error', (error) => {
  console.error(`\nâŒ Failed to start Krin: ${error.message}`);
  console.log('ğŸ’¡ Try running from the krin-personal-companion directory instead');
});