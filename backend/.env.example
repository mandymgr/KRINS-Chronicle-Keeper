# KRINS-Chronicle-Keeper Backend Configuration

# Environment
KRINS_ENV=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql+asyncpg://krins:krins_password@localhost:5433/krins_db

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ISSUER=krins-chronicle-keeper
JWT_AUDIENCE=krins-users

# Password Security
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=15

# API Key Configuration
API_KEY_PREFIX_LENGTH=8
API_KEY_TOTAL_LENGTH=32

# Admin User (for initial setup)
KRINS_ADMIN_PASSWORD=admin123

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Security Headers
ENABLE_SECURITY_HEADERS=true

# Session Configuration
SESSION_TIMEOUT_MINUTES=480  # 8 hours

# API Documentation
ENABLE_API_DOCS=true
API_DOCS_URL=/docs
REDOC_URL=/redoc