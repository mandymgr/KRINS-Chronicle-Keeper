{
  "name": "utvikler-dashboard",
  "version": "1.0.0",
  "description": "Utvikler-dashboard - Visual Project Overview Dashboard for Dev Memory OS Team",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "bun --bun next dev",
    "build": "bun --bun next build", 
    "start": "bun --bun next start",
    "lint": "bun --bun next lint",
    "lint:fix": "bun --bun next lint --fix",
    "typecheck": "bun tsc --noEmit",
    "format": "bun prettier --write .",
    "format:check": "bun prettier --check .",
    "test": "bun test",
    "test:ui": "bun test --ui",
    "test:coverage": "bun test --coverage",
    "prepare": "bun husky install",
    "electron": "bun electron .",
    "electron:dev": "bun concurrently \"bun run dev\" \"bun wait-on http://localhost:3000 && bun electron .\"",
    "electron:build": "bun run build && bun electron-builder",
    "electron:dist": "bun run build && bun electron-builder --publish=never"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.0",
    "@types/node": "^22.8.6",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.454.0",
    "marked": "^14.1.3",
    "mermaid": "^11.3.0",
    "next": "^14.2.15",
    "postcss": "^8.4.47",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "@vitejs/plugin-react": "^4.3.3",
    "electron": "^37.4.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.15",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "vitest": "^2.1.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "dashboard",
    "project-overview",
    "living-spec",
    "nextjs",
    "typescript",
    "dev-memory-os"
  ],
  "author": "Krin & Mandy - Dev Memory OS Team",
  "license": "MIT",
  "build": {
    "appId": "com.devmemoryos.livingspec",
    "productName": "Living Spec Dashboard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "electron/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "electron/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "electron/icon.png"
    }
  }
}
