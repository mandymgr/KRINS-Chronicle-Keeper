# 🚀 KRINS-Chronicle-Keeper Production Configuration
# Copy to .env and customize for your production environment

# 🌍 Environment
NODE_ENV=production
PYTHON_ENV=production

# 🌐 Domain & URLs
DOMAIN=krins.company
API_URL=https://api.krins.company
WS_URL=wss://api.krins.company
CORS_ORIGINS=https://krins.company,https://app.krins.company

# 🔌 Port Configuration
FRONTEND_PORT=443
FRONTEND_HTTP_PORT=80
API_PORT=8000
SEMANTIC_PORT=3003
WS_PORT=3001
POSTGRES_PORT=5432
REDIS_PORT=6379
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# 🔐 Security & Authentication
SECRET_KEY=your-ultra-secure-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-in-production
POSTGRES_PASSWORD=your-secure-postgres-password
REDIS_PASSWORD=your-secure-redis-password
GRAFANA_PASSWORD=your-secure-grafana-password

# 🤖 AI & External Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# 🗄️ Database Configuration
DATABASE_URL=postgresql://krins_user:${POSTGRES_PASSWORD}@postgres:5432/krins_production
REDIS_URL=redis://redis:6379

# 📊 Performance & Scaling
MAX_WORKERS=4
LOG_LEVEL=info
CACHE_TTL=3600

# 💾 Data Storage
DATA_PATH=/var/lib/krins

# 🔄 Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
S3_BACKUP_BUCKET=your-backup-bucket-name
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# 📈 Monitoring
PROMETHEUS_RETENTION=200h
GRAFANA_INSTALL_PLUGINS=grafana-piechart-panel

# 🛡️ Security Headers
SECURITY_HEADERS=true
SSL_REDIRECT=true

# 🏢 Multi-tenant Configuration (if applicable)
ENABLE_MULTITENANCY=true
DEFAULT_TENANT=default

# 📧 Email Configuration (for notifications)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
FROM_EMAIL=noreply@krins.company

# 🔔 Notification Services
SLACK_WEBHOOK_URL=your-slack-webhook-url
TEAMS_WEBHOOK_URL=your-teams-webhook-url

# 📊 Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=365

# 🧪 Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_SEMANTIC_SEARCH=true
ENABLE_REAL_TIME_SYNC=true
ENABLE_ADVANCED_ANALYTICS=true

# 🌐 CDN Configuration (if using)
CDN_URL=https://cdn.krins.company
STATIC_FILES_URL=https://static.krins.company

# 🔍 Search Configuration
SEARCH_INDEX_NAME=krins_production
VECTOR_DIMENSIONS=1536
SIMILARITY_THRESHOLD=0.7

# 🚀 Performance Tuning
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
CACHE_BACKEND=redis
SESSION_TIMEOUT=3600

# 🛡️ Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=3600

# 📝 Logging
LOG_FORMAT=json
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# 🔧 Health Checks
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# 🌍 Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,no,da,sv

# 💰 Billing & Usage (if applicable)
ENABLE_USAGE_TRACKING=true
BILLING_PROVIDER=stripe
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key