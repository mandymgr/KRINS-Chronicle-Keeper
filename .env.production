# Dev Memory OS - Production Environment Configuration
# Copy this to Railway environment variables

# REQUIRED: OpenAI API Configuration  
OPENAI_API_KEY=

# REQUIRED: Database Configuration (Railway will provide these)
DATABASE_URL=
DB_HOST=
DB_PORT=5432
DB_USER=
DB_PASSWORD=
DB_NAME=

# Server Configuration
NODE_ENV=production
PORT=3003

# REQUIRED: Production Security
API_KEY=
JWT_SECRET=
CORS_ORIGINS=https://your-frontend-domain.railway.app,https://your-custom-domain.com

# Optional: Monitoring and Analytics
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# Optional: Feature Flags
ENABLE_VECTOR_SEARCH=true
ENABLE_BATCH_PROCESSING=true
ENABLE_REAL_TIME_CHAT=true

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: File Storage (if implementing file uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=
AWS_REGION=us-east-1

# Optional: Email Service (for notifications)
SENDGRID_API_KEY=
FROM_EMAIL=noreply@your-domain.com

# Optional: Logging Level
LOG_LEVEL=info