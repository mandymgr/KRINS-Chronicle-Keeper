# Dev Memory OS FastAPI Backend Environment Variables

# Application Settings
PROJECT_NAME="Dev Memory OS FastAPI"
VERSION="2.0.0"
DEBUG=true
LOG_LEVEL="INFO"

# Server Settings  
HOST="0.0.0.0"
PORT=8000

# Database Settings - Using SQLite for development
DATABASE_URL="sqlite+aiosqlite:///./dev_memory_os.db"

# Database Pool Settings
DB_POOL_SIZE=25
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# OpenAI Settings (optional for now)
OPENAI_API_KEY=""
OPENAI_MODEL="text-embedding-3-small"
EMBEDDING_DIMENSION=1536

# Redis Settings (for caching and job queues)
REDIS_URL="redis://localhost:6379/0"

# API Security
API_KEY="dev-api-key"
SECRET_KEY="dev-secret-key-for-development"

# CORS Settings - Include frontend ports
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:5174,http://localhost:5173,http://localhost:8080"

# Performance Settings
MAX_BATCH_SIZE=50
REQUEST_TIMEOUT=30
EMBEDDING_BATCH_SIZE=25

# Search Settings
DEFAULT_SIMILARITY_THRESHOLD=0.7
MAX_SEARCH_RESULTS=50

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Settings
ENVIRONMENT="development"