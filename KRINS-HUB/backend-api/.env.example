# Dev Memory OS FastAPI Backend Environment Variables

# Application Settings
PROJECT_NAME="Dev Memory OS FastAPI"
VERSION="2.0.0"
DEBUG=true
LOG_LEVEL="INFO"

# Server Settings  
HOST="0.0.0.0"
PORT=8000

# Database Settings (Railway PostgreSQL)
# Use DATABASE_URL for Railway, or individual settings for local development
DATABASE_URL="postgresql+asyncpg://username:password@host:port/database"

# Local database settings (used if DATABASE_URL is not set)
DB_HOST="localhost"
DB_PORT=5432
DB_USER="devmemory"
DB_PASSWORD="devmemory_secure_password_2024"
DB_NAME="dev_memory_os"

# Database Pool Settings
DB_POOL_SIZE=25
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# OpenAI Settings
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="text-embedding-3-small"
EMBEDDING_DIMENSION=1536

# Redis Settings (for caching and job queues)
REDIS_URL="redis://localhost:6379/0"

# API Security
API_KEY="your-api-key-here"
SECRET_KEY="your-secret-key-change-in-production"

# CORS Settings (comma-separated)
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8080"

# Performance Settings
MAX_BATCH_SIZE=50
REQUEST_TIMEOUT=30
EMBEDDING_BATCH_SIZE=25

# Search Settings
DEFAULT_SIMILARITY_THRESHOLD=0.7
MAX_SEARCH_RESULTS=50

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=9090

# Railway Deployment Settings
RAILWAY_STATIC_URL="https://your-app.railway.app"
ENVIRONMENT="production"