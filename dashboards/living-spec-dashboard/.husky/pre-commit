#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run type checking
echo "🔍 Running TypeScript type check..."
npm run typecheck

# Run lint-staged for code formatting and linting
echo "🧹 Running lint-staged..."
npx lint-staged

# Run tests
echo "🧪 Running tests..."
npm run test -- --run

echo "✅ Pre-commit checks passed!"