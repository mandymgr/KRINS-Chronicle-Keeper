# KRINS Chronicle Keeper - Organizational Intelligence Platform
# Master Environment Configuration - Copy to .env and customize

# =============================================================================
# ü§ñ AI & OpenAI Configuration (Required for AI features)
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=text-embedding-3-small

# =============================================================================
# üóÑÔ∏è Database Configuration (PostgreSQL with pgvector)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://krins:krins_password@localhost:5432/krins_db
DB_HOST=localhost
DB_PORT=5432
DB_USER=krins
DB_PASSWORD=krins_password
DB_NAME=krins_db

# =============================================================================
# üî¥ Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6380
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=redis_password

# =============================================================================
# üåê Server Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_PORT=3000
NODE_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# üìã Application Settings
# =============================================================================
PROJECT_NAME=KRINS Chronicle Keeper
VERSION=1.0.0

# =============================================================================
# üîê Security & CORS Configuration
# =============================================================================
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://localhost:8080"]

# =============================================================================
# üß† AI Integration Settings
# =============================================================================
EMBEDDING_BATCH_SIZE=10
AI_CONTEXT_MAX_TOKENS=4000

# =============================================================================
# üéõÔ∏è Feature Flags
# =============================================================================
ENABLE_AI_FEATURES=true
ENABLE_SEMANTIC_SEARCH=true
ENABLE_ANALYTICS=true
DEVELOPMENT=true
TESTING=false

# GitHub Integration
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# Slack Integration (optional)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_APP_TOKEN=xapp-your-slack-app-token

# Decision Management Configuration
ADR_DIRECTORY=./docs/adr
PATTERNS_DIRECTORY=./docs/patterns
RUNBOOKS_DIRECTORY=./docs/runbooks
DEFAULT_EVIDENCE_COLLECTION_PERIOD=90

# Performance Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=5
CACHE_TTL=3600
MAX_SEARCH_RESULTS=50

# Monitoring & Analytics
ENABLE_ANALYTICS=true
ENABLE_PERFORMANCE_MONITORING=true
METRICS_ENDPOINT=/metrics

# External Integrations
JIRA_URL=your-jira-instance-url
JIRA_TOKEN=your-jira-api-token
CONFLUENCE_URL=your-confluence-url
CONFLUENCE_TOKEN=your-confluence-token

# Security Configuration
JWT_SECRET=your-jwt-secret-key
SESSION_SECRET=your-session-secret
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Logging & Monitoring
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Production Security (set for production deployment)
API_KEY=your-production-api-key
WEBHOOK_VERIFICATION_TOKEN=your-webhook-verification-token